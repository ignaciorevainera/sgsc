---
import Main from "@/layouts/Main.astro";
import Title from "@/components/shared/Title.astro";
import { createAstroSupabase } from "@/lib/supabase";
import { Icon } from "astro-icon/components";

// --- 1. SEGURIDAD ---
const supabase = createAstroSupabase(Astro);
const {
  data: { user },
} = await supabase.auth.getUser();
if (!user) {
  return Astro.redirect("/login");
}

// --- 2. DATA ---
const { data: players } = await supabase
  .from("players")
  .select("*")
  .eq("is_active", true) // <--- Agrega esto
  // 1. Primero por Estado: 'false' (Socio) va antes que 'true' (Invitado)
  .order("is_guest", { ascending: true })
  // 2. Luego Alfabéticamente por Apodo
  .order("nickname", { ascending: true });

const { data: fields } = await supabase
  .from("fields")
  .select("*")
  .order("name");

// --- 3. POST LOGIC ---
let successMessage = "";
let errorMessage = "";

if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();
    const date = formData.get("date");
    const field_id = formData.get("field_id");
    const result = formData.get("result");

    const lightPlayers: any[] = [];
    const darkPlayers: any[] = [];

    // Recolectar jugadores
    players?.forEach((p) => {
      const selection = formData.get(`player_${p.id}`);
      if (selection === "light") lightPlayers.push(p.id);
      if (selection === "dark") darkPlayers.push(p.id);
    });

    if (!date || !field_id || !result)
      throw new Error("Faltan datos obligatorios");
    if (lightPlayers.length === 0 || darkPlayers.length === 0)
      throw new Error("Equipos incompletos");

    const { error } = await supabase.rpc("create_complete_match", {
      p_date: date,
      p_field_id: field_id,
      p_result: result,
      p_light_players: lightPlayers,
      p_dark_players: darkPlayers,
    });

    if (error) throw error;
    successMessage = "¡Partido registrado con éxito!";
  } catch (err: any) {
    errorMessage = err.message;
  }
}
---

<Main title="Cargar Partido | SGSC">
  <Title title="Cargar Partido" subtitle="Panel de Administración" />

  {/* Alertas */}
  {
    successMessage && (
      <div role="alert" class="alert alert-success mb-6 rounded-xl shadow-md">
        <Icon name="material-symbols:check-circle" size={24} />
        <span class="flex-1 text-sm sm:text-base">{successMessage}</span>
      </div>
    )
  }

  {
    errorMessage && (
      <div role="alert" class="alert alert-error mb-6 rounded-xl shadow-md">
        <Icon name="material-symbols:error" size={24} />
        <span class="text-sm sm:text-base">{errorMessage}</span>
      </div>
    )
  }

  <form
    method="POST"
    id="matchForm"
    class="bg-base-100 border-base-200 space-y-6 rounded-xl border p-4 shadow-md sm:p-6"
  >
    {/* Sección: Fecha y Sede */}
    <div class="grid grid-cols-1 sm:grid-cols-2 sm:gap-x-4">
      <div class="form-control">
        <fieldset class="fieldset">
          <legend class="fieldset-legend">Fecha del Partido</legend>
          <input
            type="date"
            name="date"
            id="inputDate"
            class="input input-bordered w-full rounded-xl"
            required
          />
        </fieldset>
      </div>
      <div class="form-control">
        <fieldset class="fieldset">
          <legend class="fieldset-legend">Sede</legend>
          <select
            name="field_id"
            id="inputField"
            class="select select-bordered w-full rounded-xl"
            required
          >
            <option disabled selected value="">Selecciona una cancha</option>
            {
              fields?.map((f) => (
                <option value={f.id} data-name={f.name}>
                  {f.name}
                </option>
              ))
            }
          </select>
        </fieldset>
      </div>
      <div class="form-control sm:col-span-2">
        <fieldset class="fieldset h-full">
          <legend class="fieldset-legend">Resultado del Partido</legend>

          <div class="grid grid-cols-3 gap-2">
            {/* Opción: Ganó Claro */}
            <label
              class="group has-[:checked]:border-success cursor-pointer rounded-xl border-2 border-slate-200 bg-slate-50 p-3 text-center transition-all hover:border-slate-400 hover:shadow-md has-[:checked]:bg-slate-100 has-[:checked]:shadow-lg sm:p-4 lg:p-5"
            >
              <div class="flex flex-col items-center gap-1 sm:gap-2">
                <Icon
                  name="material-symbols:wb-sunny"
                  size={28}
                  class="text-slate-600"
                />
                <span
                  class="text-xs font-bold text-slate-700 sm:text-sm lg:text-base"
                  >Claro</span
                >
              </div>
              <input
                type="radio"
                name="result"
                value="light"
                class="hidden"
                required
              />
            </label>

            {/* Opción: Empate */}
            <label
              class="group has-[:checked]:border-success cursor-pointer rounded-xl border-2 border-yellow-200 bg-yellow-50 p-3 text-center transition-all hover:border-yellow-400 hover:shadow-md has-[:checked]:bg-yellow-100 has-[:checked]:shadow-lg sm:p-4 lg:p-5"
            >
              <div class="flex flex-col items-center gap-1 sm:gap-2">
                <Icon
                  name="material-symbols:balance"
                  size={28}
                  class="text-yellow-600"
                />
                <span
                  class="text-xs font-bold text-yellow-700 sm:text-sm lg:text-base"
                  >Empate</span
                >
              </div>
              <input type="radio" name="result" value="draw" class="hidden" />
            </label>

            {/* Opción: Ganó Oscuro */}
            <label
              class="group has-[:checked]:border-success cursor-pointer rounded-xl border-2 border-slate-300 bg-slate-800 p-3 text-center transition-all hover:border-slate-500 hover:shadow-md has-[:checked]:bg-slate-900 has-[:checked]:shadow-lg sm:p-4 lg:p-5"
            >
              <div class="flex flex-col items-center gap-1 sm:gap-2">
                <Icon
                  name="material-symbols:dark-mode"
                  size={28}
                  class="text-slate-300"
                />
                <span
                  class="text-xs font-bold text-slate-200 sm:text-sm lg:text-base"
                  >Oscuro</span
                >
              </div>
              <input type="radio" name="result" value="dark" class="hidden" />
            </label>
          </div>
        </fieldset>
      </div>
    </div>

    {/* Sección: Resultado */}

    {/* Divider */}
    <div
      class="divider text-base-content/60 font-bold tracking-wider uppercase"
    >
      Convocatoria
    </div>

    {/* Lista de Jugadores */}
    <div
      class="bg-base-100 border-base-200 max-h-96 overflow-auto rounded-xl border shadow-md"
    >
      {/* Header */}
      <div
        class="bg-base-200 sticky top-0 z-10 grid grid-cols-[1fr_2.5rem_2.5rem_2.5rem] items-center gap-1 px-3 py-2 sm:grid-cols-[1fr_3rem_3rem_3rem] sm:gap-2"
      >
        <span class="text-xs font-bold sm:text-sm">Jugador</span>
        <span class="text-base-content/60 text-center text-xs">—</span>
        <span class="flex justify-center">
          <Icon
            name="material-symbols:wb-sunny"
            class="text-base text-slate-500 sm:text-xl dark:text-slate-300"
          />
        </span>
        <span class="flex justify-center">
          <Icon
            name="material-symbols:dark-mode"
            class="text-base text-slate-500 sm:text-xl dark:text-slate-300"
          />
        </span>
      </div>

      {/* Filas de jugadores */}
      <div class="divide-base-200 divide-y">
        {
          players?.map((player) => (
            <div class="hover:bg-base-200/50 grid grid-cols-[1fr_2.5rem_2.5rem_2.5rem] items-center gap-1 px-3 py-2 transition-colors sm:grid-cols-[1fr_3rem_3rem_3rem] sm:gap-2">
              {/* Nombre */}
              <div class="flex min-w-0 items-center gap-1">
                <span
                  class="tooltip tooltip-right truncate text-xs font-bold sm:text-sm"
                  data-tip={player.nickname}
                >
                  {player.nickname}
                </span>
                {player.is_guest && (
                  <span class="badge badge-ghost badge-xs border-base-300 shrink-0 opacity-60">
                    INV
                  </span>
                )}
              </div>

              {/* No juega */}
              <div class="flex justify-center">
                <input
                  type="radio"
                  name={`player_${player.id}`}
                  value="none"
                  class="radio radio-xs sm:radio-sm radio-error"
                  checked
                />
              </div>

              {/* Claro */}
              <div class="flex justify-center rounded">
                <input
                  type="radio"
                  name={`player_${player.id}`}
                  value="light"
                  data-nickname={player.nickname}
                  class="player-selector radio radio-xs sm:radio-sm radio-warning"
                />
              </div>

              {/* Oscuro */}
              <div class="flex justify-center rounded">
                <input
                  type="radio"
                  name={`player_${player.id}`}
                  value="dark"
                  data-nickname={player.nickname}
                  class="player-selector radio radio-xs sm:radio-sm radio-neutral dark:radio-primary"
                />
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <button
      type="button"
      id="btnPreview"
      class="btn btn-primary btn-lg w-full rounded-xl"
    >
      <Icon name="material-symbols:visibility" size={24} />
      <span class="text-sm font-bold sm:text-base">Previsualizar Partido</span>
    </button>
  </form>

  {/* Modal de Previsualización */}
  <dialog id="preview_modal" class="modal modal-bottom sm:modal-middle">
    <div
      class="modal-box bg-base-100 max-h-[90vh] overflow-hidden rounded-t-2xl p-0 sm:max-w-lg sm:rounded-2xl"
    >
      {/* Header del Modal */}
      <div
        class="bg-primary text-primary-content flex items-center justify-center gap-2 p-4 sm:p-5"
      >
        <Icon name="material-symbols:fact-check" size={24} />
        <h3 class="text-lg font-black tracking-tight uppercase sm:text-xl">
          Confirmar Partido
        </h3>
      </div>

      {/* Contenido estilo MatchCard */}
      <div class="p-4 sm:p-5">
        <div
          class="card bg-base-100 border-base-200 rounded-xl border shadow-md"
        >
          <div class="card-body gap-3 p-4">
            {/* Cabecera: Fecha y Cancha */}
            <div class="flex items-center justify-between text-xs sm:text-sm">
              <div class="flex items-center gap-1.5">
                <Icon
                  name="material-symbols:calendar-today"
                  size={16}
                  class="text-primary shrink-0"
                />
                <span class="font-medium" id="previewDate">--/--/----</span>
              </div>
              <div
                class="flex flex-row-reverse items-center gap-1.5 overflow-hidden"
              >
                <Icon
                  name="material-symbols:location-on"
                  size={16}
                  class="text-secondary shrink-0"
                />
                <span class="truncate font-medium" id="previewField">---</span>
              </div>
            </div>

            {/* Badge de resultado */}
            <div class="flex justify-center">
              <span
                id="previewResultBadge"
                class="badge badge-lg w-full rounded-xl py-4 text-sm font-bold tracking-wide uppercase"
              >
                ---
              </span>
            </div>

            {/* Equipos */}
            <div
              id="previewTeamsContainer"
              class="grid grid-rows-2 gap-3 sm:grid-cols-2 sm:grid-rows-1"
            >
              {/* Equipo Claro */}
              <div
                id="previewLightTeam"
                class="relative overflow-hidden rounded-xl border-2 border-slate-300 bg-slate-100 p-3 text-slate-800"
              >
                <h3 class="sr-only">Equipo Claro</h3>
                <div
                  id="previewLightList"
                  class="relative z-10 flex flex-wrap gap-1.5"
                >
                </div>
                <Icon
                  name="material-symbols:wb-sunny"
                  class="pointer-events-none absolute -right-4 -bottom-4 h-20 w-20 rotate-12 text-slate-300/40"
                />
              </div>

              {/* Equipo Oscuro */}
              <div
                id="previewDarkTeam"
                class="relative overflow-hidden rounded-xl border-2 border-slate-700 bg-slate-800 p-3 text-slate-100"
              >
                <h3 class="sr-only">Equipo Oscuro</h3>
                <div
                  id="previewDarkList"
                  class="relative z-10 flex flex-wrap gap-1.5"
                >
                </div>
                <Icon
                  name="material-symbols:dark-mode"
                  class="pointer-events-none absolute -right-4 -bottom-4 h-20 w-20 -rotate-12 text-slate-700/50"
                />
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Footer del Modal */}
      <div
        class="modal-action bg-base-200/50 m-0 flex flex-col-reverse gap-2 p-4 sm:flex-row sm:items-center sm:justify-between sm:p-5"
      >
        <form method="dialog" class="w-full sm:w-auto">
          <button class="btn btn-outline btn-error w-full rounded-xl sm:w-auto">
            <Icon name="material-symbols:close" size={18} />
            Cancelar
          </button>
        </form>
        <button
          id="btnConfirm"
          class="btn btn-success w-full rounded-xl sm:w-auto"
        >
          <Icon name="material-symbols:save" size={20} />
          <span>Confirmar y Guardar</span>
        </button>
      </div>
    </div>

    {/* Backdrop para cerrar */}
    <form method="dialog" class="modal-backdrop">
      <button>Cerrar</button>
    </form>
  </dialog>
</Main>

<script is:inline>
  // LÓGICA CLIENT-SIDE PARA EL PREVIEW
  const btnPreview = document.getElementById("btnPreview");
  const btnConfirm = document.getElementById("btnConfirm");
  const modal = document.getElementById("preview_modal");
  const form = document.getElementById("matchForm");

  btnPreview.addEventListener("click", () => {
    // 1. Validar campos básicos
    const date = document.getElementById("inputDate").value;
    const fieldSelect = document.getElementById("inputField");
    const fieldName =
      fieldSelect.options[fieldSelect.selectedIndex]?.dataset.name;
    const resultInput = document.querySelector('input[name="result"]:checked');

    if (!date || !fieldName || !resultInput) {
      alert("Por favor completa fecha, cancha y resultado.");
      return;
    }

    // 2. Recolectar Jugadores
    const lightPlayers = [];
    const darkPlayers = [];

    // Buscamos todos los inputs "checked" que sean de jugadores
    document.querySelectorAll(".player-selector:checked").forEach((input) => {
      const nickname = input.dataset.nickname;
      if (input.value === "light") lightPlayers.push(nickname);
      if (input.value === "dark") darkPlayers.push(nickname);
    });

    if (lightPlayers.length === 0 || darkPlayers.length === 0) {
      alert("Debes seleccionar jugadores para ambos equipos.");
      return;
    }

    // 3. Llenar el Modal
    document.getElementById("previewDate").innerText = new Date(
      date
    ).toLocaleDateString("es-AR");
    document.getElementById("previewField").innerText = fieldName;

    // Estilo del Badge de Resultado
    const badge = document.getElementById("previewResultBadge");
    const resultVal = resultInput.value;

    // Resetear clases del badge
    badge.className =
      "badge badge-lg w-full rounded-xl py-4 text-sm font-bold uppercase tracking-wide ";

    // Equipos containers para el ring de ganador
    const lightTeam = document.getElementById("previewLightTeam");
    const darkTeam = document.getElementById("previewDarkTeam");

    // Resetear rings
    lightTeam.classList.remove(
      "ring-2",
      "ring-emerald-400",
      "ring-offset-2",
      "border-yellow-400"
    );
    darkTeam.classList.remove(
      "ring-2",
      "ring-emerald-400",
      "ring-offset-2",
      "border-yellow-400"
    );
    lightTeam.classList.add("border-slate-300");
    darkTeam.classList.add("border-slate-700");

    if (resultVal === "light") {
      badge.classList.add(
        "border-2",
        "border-slate-300",
        "bg-slate-100",
        "text-slate-700"
      );
      badge.innerText = "Ganó Equipo Claro";
      // Ring al ganador
      lightTeam.classList.add("ring-2", "ring-emerald-400", "ring-offset-2");
    } else if (resultVal === "dark") {
      badge.classList.add(
        "border-2",
        "border-slate-700",
        "bg-slate-800",
        "text-slate-100"
      );
      badge.innerText = "Ganó Equipo Oscuro";
      // Ring al ganador
      darkTeam.classList.add("ring-2", "ring-emerald-400", "ring-offset-2");
    } else {
      badge.classList.add(
        "border-2",
        "border-yellow-400",
        "bg-yellow-100",
        "text-yellow-700"
      );
      badge.innerText = "Empate";
      // Ambos con borde amarillo para empate
      lightTeam.classList.remove("border-slate-300");
      darkTeam.classList.remove("border-slate-700");
      lightTeam.classList.add("border-yellow-400");
      darkTeam.classList.add("border-yellow-400");
    }

    // Listas de jugadores con estilo PlayerBadge
    const listLight = document.getElementById("previewLightList");
    const listDark = document.getElementById("previewDarkList");

    listLight.innerHTML = lightPlayers
      .map(
        (p) =>
          `<span class="badge badge-sm h-fit rounded-lg border border-slate-300 bg-slate-200 py-1 font-medium text-slate-800">${p}</span>`
      )
      .join("");
    listDark.innerHTML = darkPlayers
      .map(
        (p) =>
          `<span class="badge badge-sm h-fit rounded-lg border border-slate-600 bg-slate-700 py-1 font-medium text-slate-100">${p}</span>`
      )
      .join("");

    // 4. Mostrar Modal
    modal.showModal();
  });

  // 5. Confirmar envío
  btnConfirm.addEventListener("click", () => {
    form.submit(); // Esto envía el POST real al servidor
  });
</script>
