---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
}

const { title, description, icon, href } = Astro.props as Props;
---

<div
  class="card bg-base-200 h-full shadow-lg transition-all hover:scale-[1.02]"
>
  <div class="card-body p-4">
    <!-- <div class="flex items-center justify-center rounded-full">
      <Icon name={icon} size={32} />
    </div> -->
    <h2 class="card-title text-2xl">{title}</h2>
    <p class="text-base-content/70 grow">{description}</p>
    <a href={href} class="btn btn-soft mt-4 gap-2">
      Explorar
      <Icon name="material-symbols:arrow-forward-rounded" size={20} />
    </a>
  </div>
</div>
