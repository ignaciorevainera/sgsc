---
interface Props {
  lightWins: number;
  darkWins: number;
  draws: number;
}

const { lightWins, darkWins, draws } = Astro.props;
---

<div class="grid grid-cols-3 gap-2 text-center">
  {/* Victorias Claro */}
  <div
    class="flex flex-col items-center justify-center gap-1 rounded-xl border-2 border-slate-300 bg-slate-100 p-3"
  >
    <span class="text-2xl font-black text-slate-700">{lightWins}</span>
    <span class="text-xs font-bold text-slate-500 uppercase">Claro</span>
  </div>

  {/* Empates */}
  <div
    class="flex flex-col items-center justify-center gap-1 rounded-xl border-2 border-yellow-400 bg-yellow-100 p-3"
  >
    <span class="text-2xl font-black text-yellow-700">{draws}</span>
    <span class="text-xs font-bold text-yellow-700 uppercase">Empates</span>
  </div>

  {/* Victorias Oscuro */}
  <div
    class="flex flex-col items-center justify-center gap-1 rounded-xl border-2 border-slate-700 bg-slate-800 p-3"
  >
    <span class="text-2xl font-black text-slate-100">{darkWins}</span>
    <span class="text-xs font-bold text-slate-400 uppercase">Oscuro</span>
  </div>
</div>
