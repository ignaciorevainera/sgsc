---
interface Props {
  initial: string;
  size?: "xs" | "sm" | "md" | "lg" | "xl";
  ring?: boolean;
  interactive?: boolean;
  class?: string;
}

const {
  initial,
  size = "lg",
  ring = true,
  interactive = true,
  class: className = "",
} = Astro.props;

const sizeClasses = {
  xs: "w-8 text-xs",
  sm: "w-12 text-xl",
  md: "w-16 text-2xl",
  lg: "w-20 text-3xl sm:w-24 sm:text-4xl",
  xl: "w-28 text-5xl",
};

const ringClasses = {
  xs: "ring-2",
  sm: "ring-2",
  md: "ring-4",
  lg: "ring-4",
  xl: "ring-4",
};

const sizeClass = sizeClasses[size];
const ringClass = ring
  ? `${ringClasses[size]} ring-slate-200 ring-offset-2 ring-offset-base-100`
  : "";

const interactiveClass = interactive
  ? `transition-all duration-200 ${ring ? "hover:ring-primary group-hover:ring-primary" : ""} hover:shadow-md group-hover:shadow-md`
  : "";
---

<div class={`avatar avatar-placeholder placeholder ${className}`}>
  <div
    class={`bg-neutral text-neutral-content flex items-center justify-center rounded-full ${sizeClass} ${ringClass} ${interactiveClass}`}
  >
    <span class="font-black">
      {initial}
    </span>
  </div>
</div>
