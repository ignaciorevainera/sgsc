---
interface Props {
  initial: string;
  size?: "xs" | "sm" | "md" | "lg" | "xl";
  ring?: boolean;
  class?: string;
}

const {
  initial,
  size = "lg",
  ring = true,
  class: className = "",
} = Astro.props;

const sizeClasses = {
  xs: "w-8 text-xs",
  sm: "w-12 text-xl",
  md: "w-16 text-2xl",
  lg: "w-20 text-3xl sm:w-24 sm:text-4xl",
  xl: "w-28 text-5xl",
};

const ringClasses = {
  xs: "ring-2",
  sm: "ring-2",
  md: "ring-4",
  lg: "ring-4",
  xl: "ring-4",
};

const sizeClass = sizeClasses[size];
const ringClass = ring ? `${ringClasses[size]} ring-base-100` : "";
---

<div class={`avatar placeholder ${className}`}>
  <div
    class={`bg-neutral text-neutral-content flex items-center justify-center rounded-full ${sizeClass} ${ringClass}`}
  >
    <span class="font-black">
      {initial}
    </span>
  </div>
</div>
