---
interface Props {
  initial: string;
  size?: "sm" | "md" | "lg" | "xl";
}

const { initial, size = "lg" } = Astro.props;

const sizeClasses = {
  sm: "w-8 text-lg",
  md: "w-12 text-4xl",
  lg: "w-24 text-5xl",
  xl: "w-30 text-6xl",
};

const ringSize = {
  sm: "ring-2",
  md: "ring-4",
  lg: "ring-4",
  xl: "ring-4",
};

const sizeClass = sizeClasses[size];
const ringClass = ringSize[size];
---

<div class="avatar placeholder">
  <div
    class={`bg-neutral text-neutral-content ring-base-100 flex items-center justify-center rounded-full shadow-xl ${sizeClass} ${ringClass}`}
  >
    <span class="font-semibold">
      {initial}
    </span>
  </div>
</div>
