---
interface Props {
  hover?: boolean;
  class?: string;
  bodyClass?: string;
}

const { hover = false, class: className = "", bodyClass = "" } = Astro.props;

const hoverClass = hover
  ? "transition-all hover:-translate-y-1 hover:shadow-lg"
  : "";

const baseClass = `card bg-base-100 border-base-200 rounded-xl border shadow-md ${hoverClass} ${className}`;
---

<div class={baseClass}>
  <div class={`card-body ${bodyClass}`}>
    <slot />
  </div>
</div>
