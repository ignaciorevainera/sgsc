---
interface Props {
  class?: string;
  bodyClass?: string;
}

const { class: className = "", bodyClass = "" } = Astro.props;

const baseClass = `card bg-base-100 border-base-200 rounded-xl border shadow-md ${className}`;
---

<div class={baseClass}>
  <div class={`card-body ${bodyClass}`}>
    <slot />
  </div>
</div>
