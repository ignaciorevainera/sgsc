---
import { Icon } from "astro-icon/components";
import Card from "@/components/shared/Card.astro";

interface Props {
  icon: string;
  value: number | string;
  label: string;
  color?:
    | "primary"
    | "secondary"
    | "accent"
    | "info"
    | "success"
    | "warning"
    | "error";
}

const { icon, value, label, color = "primary" } = Astro.props;

const colorClasses = {
  primary: "bg-primary/10 text-primary",
  secondary: "bg-secondary/10 text-secondary",
  accent: "bg-accent/10 text-accent",
  info: "bg-info/10 text-info",
  success: "bg-success/10 text-success",
  warning: "bg-warning/10 text-warning",
  error: "bg-error/10 text-error",
};
---

<Card>
  <div class="flex flex-col items-center p-4 text-center lg:p-6">
    <div class={`mb-3 rounded-full p-3 lg:p-4 ${colorClasses[color]}`}>
      <Icon name={icon} size={32} />
    </div>
    <span class="text-3xl font-black lg:text-4xl">{value}</span>
    <span
      class="text-base-content/60 mt-1 text-xs font-bold uppercase lg:text-sm"
    >
      {label}
    </span>
  </div>
</Card>
