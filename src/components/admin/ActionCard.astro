---
import { Icon } from "astro-icon/components";
import Card from "@/components/shared/Card.astro";

interface Props {
  href: string;
  icon: string;
  title: string;
  description: string;
  color?:
    | "primary"
    | "secondary"
    | "accent"
    | "info"
    | "success"
    | "warning"
    | "error";
}

const { href, icon, title, description, color = "primary" } = Astro.props;

const colorClasses = {
  primary: {
    base: "bg-primary/10 text-primary",
    hover: "group-hover:bg-primary",
  },
  secondary: {
    base: "bg-secondary/10 text-secondary",
    hover: "group-hover:bg-secondary",
  },
  accent: {
    base: "bg-accent/10 text-accent",
    hover: "group-hover:bg-accent",
  },
  info: {
    base: "bg-info/10 text-info",
    hover: "group-hover:bg-info",
  },
  success: {
    base: "bg-success/10 text-success",
    hover: "group-hover:bg-success",
  },
  warning: {
    base: "bg-warning/10 text-warning",
    hover: "group-hover:bg-warning",
  },
  error: {
    base: "bg-error/10 text-error",
    hover: "group-hover:bg-error",
  },
};
---

<Card hover>
  <a
    href={href}
    class="group flex flex-row items-center gap-4 p-4 lg:gap-5 lg:p-6"
  >
    <div
      class={`shrink-0 rounded-full p-3 transition-all group-hover:scale-110 group-hover:text-white lg:p-4 ${colorClasses[color].base} ${colorClasses[color].hover}`}
    >
      <Icon name={icon} size={28} class="lg:hidden" />
      <Icon name={icon} size={36} class="hidden lg:block" />
    </div>
    <div class="min-w-0">
      <h3 class="text-base font-black lg:text-lg">{title}</h3>
      <p class="text-base-content/60 text-xs font-bold uppercase lg:text-sm">
        {description}
      </p>
    </div>
  </a>
</Card>
